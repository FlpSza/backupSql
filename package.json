{
  "name": "delphie",
  "version": "1.0.0",
  "description": "Descrição teste",
  "main": "src/main.js",
  "scripts": {
    "start": "electron src/main.js && node src/server.js",
    "package": "electron-builder -w"
  },
  "build": {
    "appId": "com.example.delphie",
    "productName": "Delphie",
    "directories": {
      "output": "dist" 
    },  "files": [
      "src/**/*",
      "visual/**/*",
      ".env",
      "package.json"
    ],
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": [
        {
          "target": "nsis", 
          "arch": [
            "x64" 
          ]
        }
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.2",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.3",
    "pg-promise": "^11.5.4"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "electron": "^28.2.0"
  }
}
